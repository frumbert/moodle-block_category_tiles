{{!
    @template block_category_tiles/tile

    This template renders a tile within the category_tiles block.

    Example context (json):
    {
    }
}}
<div class="card dashboard-card" role="listitem">
    <a href="{{url}}" tabindex="-1">
        <div class="card-img dashboard-card-img" style='background-image: url("{{{image}}}");'>
            <span class="sr-only">{{#str}}aria:categorytileimage, block_category_tiles{{/str}}</span>
        </div>
    </a>
    <div class="card-body pr-1 course-info-container" id="category-info-container-{{id}}-{{uniqid}}">
        <div class="d-flex align-items-start">
            <div class="w-100 text-truncate">
                <a href="{{url}}" class="coursename mr-2">
                    <span class="sr-only">
                            {{#str}}aria:categoryname, block_category_tiles{{/str}}
                        </span>
                    <span class="text-truncate">{{{name}}}</span>
                </a>
                {{^visible}}
                    <div class="d-flex flex-wrap">
                        <span class="tag tag-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
</div>